#!/bin/bash

chgrp wheel /Library/LaunchDaemons/com.efrederickson.reachapp.fsdaemon.plist
chown root /Library/LaunchDaemons/com.efrederickson.reachapp.fsdaemon.plist
launchctl load -w /Library/LaunchDaemons/com.efrederickson.reachapp.fsdaemon.plist

chgrp wheel /Library/LaunchDaemons/com.efrederickson.reachapp.keyboarddaemon.plist
chown root /Library/LaunchDaemons/com.efrederickson.reachapp.keyboarddaemon.plist
launchctl load -w /Library/LaunchDaemons/com.efrederickson.reachapp.keyboarddaemon.plist

echo "The best Multitasker you've never used... Until now."